{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@loe/ecs": ["libs/backend/ecs/src/index.ts"],
      "@loe/game-engine": ["libs/backend/game-engine/src/index.ts"],
      "@loe/game-engine-old": ["libs/game-engine-old/src/index.ts"],
      "@loe/game-store": ["libs/backend/game-store/src/index.ts"],
      "@loe/shared/game-blueprints": [
        "libs/shared/game-blueprints/src/index.ts"
      ],
      "@loe/shared/game-types": ["libs/shared/game-types/src/index.ts"],
      "@loe/shared/game-utils": ["libs/shared/game-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
