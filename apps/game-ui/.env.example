# Set to 'true' to show Boardgame.io debug tools (sidebar panel)
# Useful for debugging on release and PR preview deploys
VITE_SHOW_DEBUG_TOOLS=true

# Set a specific seed for reproducible game sessions (useful for testing)
# If not set, a random seed will be generated for each game
# For E2E tests, use "e2e-test" to get a predictable no-shuffle seed
# VITE_GAME_SEED=e2e-test

# Set to 'true' to enable E2E test mode
# This makes the E2E test deck selectable in the deck selection screen
# VITE_E2E_MODE=true
